<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fieldtracer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="org.servalproject.rhizome.ADD_FILE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.fieldtracer.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.fieldtracer.TraceActivity"
            android:label="@string/title_activity_trace"
            android:parentActivityName="com.example.fieldtracer.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fieldtracer.MainActivity" />
        </activity>
        <activity
            android:name="com.example.fieldtracer.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.fieldtracer.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fieldtracer.MainActivity" />
        </activity>
        <activity
            android:name="com.example.fieldtracer.ToolsActivity"
            android:label="@string/title_activity_tools"
            android:parentActivityName="com.example.fieldtracer.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fieldtracer.MainActivity" />
        </activity>
        <activity
            android:name="com.example.fieldtracer.ShareActivity"
            android:label="@string/title_activity_share"
            android:parentActivityName="com.example.fieldtracer.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fieldtracer.MainActivity" />
        </activity>
    </application>

</manifest>